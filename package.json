{
  "name": "breeze-next",
  "version": "1.0.0",
  "description": "Next version of Breeze, built using TypeScript 2.",
  "main": "app.js",
  "dependencies": {},
  "devDependencies": {
    "@types/jasmine": "^2.5.35",
    "@types/node": "^6.0.45",
    "cross-spawn": "^4.0.2",
    "gulp": "^3.9.1",
    "gulp-task-listing": "^1.0.1",
    "gutil": "^1.6.4",
    "fs-extra": "^2.0.0",
    "jasmine": "^2.5.2",
    "jasmine-node": "^1.14.5",
    "lodash": "^4.16.4",
    "q": "^1.4.1",
    "rollup": "^0.41.4",
    "rollup-plugin-multi-entry": "^2.0.1",
    "ts-loader": "^0.9.5",
    "typescript": "^2.1.5",
    "typedoc": "^0.5.6",
    "tslint": "^4.4.2",
    "uglifyjs": "^2.4.10",
    "webpack": "^1.14.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc",
    "tsc-es5": "tsc --target es5 --allowJs",
    "tsc-2015": "tsc -p tsconfig.es2015.json",
    "minify": "uglifyjs --screw-ie8 --compress --mangle --reserved 'DataType,EntityAction,AutoGeneratedKeyType,FilterQueryOp,BooleanQueryOp,EntityState,MergeStrategy,FetchStrategy,'",
    "prerollup": "npm run tsc-2015",
    "prerollup-adapters": "npm run tsc-2015",
    "rollup": "rollup",

    "typedoc": "typedoc --out ./docs/  --excludePrivate --excludeNotExported  --tsConfig ./tsconfig.typedoc.json --mode file --readme ./readme.doc.md ./src/breeze.ts ",

    "rollup-full": "npm run rollup -- -c ./rollup/rollup.full.js && npm run tsc-es5 -- --out build/breeze.debug.js temp/breeze.full.es2015.js && npm run minify -- --output build/breeze.min.js build/breeze.debug.js",
    "rollup-base": "npm run rollup -- -c ./rollup/rollup.base.js && npm run tsc-es5 -- --out build/breeze.base.debug.js temp/breeze.base.es2015.js && npm run minify -- --output build/breeze.base.min.js build/breeze.base.debug.js",
    
    "rollup-ajax-angular": "node rollup/rollup-module.js adapter-ajax-angular breezeAjaxAngular",
    "rollup-ajax-jquery": "node rollup/rollup-module.js adapter-ajax-jquery breezeAjaxJquery",
    "rollup-data-odata": "node rollup/rollup-module.js adapter-data-service-odata breezeDataServiceOdata",
    "rollup-data-webapi": "node rollup/rollup-module.js adapter-data-service-webapi breezeDataServiceWebapi",
    "rollup-model-backing": "node rollup/rollup-module.js adapter-model-library-backing-store breezeBackingStore",
    "rollup-model-ko": "node rollup/rollup-module.js adapter-model-library-ko breezeModelKnockout",
    "rollup-uri-json": "node rollup/rollup-module.js adapter-uri-builder-json breezeUriBuilderJson",
    "rollup-uri-odata": "node rollup/rollup-module.js adapter-uri-builder-odata breezeUriBuilderOdata",

    "rollup-adapters": "npm run rollup-ajax-angular && npm run rollup-ajax-jquery && npm run rollup-data-odata && npm run rollup-data-webapi && npm run rollup-model-backing && npm run rollup-model-ko && npm run rollup-uri-json && npm run rollup-uri-odata",
    "rollup-all": "npm run rollup-full && npm run rollup-base && npm run rollup-adapters"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/breeze-sandbox/breeze-next.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/breeze-sandbox/breeze-next/issues"
  },
  "homepage": "https://github.com/breeze-sandbox/breeze-next#readme"
}
